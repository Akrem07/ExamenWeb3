{% extends 'base.html.twig' %}

{% block title %}Hello AnalyseController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_logout') }}" class="btn btn-primary">Logout</a>
    <br>
    <a href="{{ path('app_patient') }}" class="btn btn-primary">Patients List</a> 
    <a href="{{ path('new_analyse') }}" class="btn btn-primary">Add Analyse</a>
    {% for analyse in analyses %}
        <article>
            <div class="content">
                Analyse: {{analyse.name | raw }}
                <br>
                Patient: {{analyse.patient.name}} {{analyse.patient.lastname}}
                <br>
                Type: {{analyse.type | raw}}
            </div>
    
            <div class="metadata">date analyse: {{analyse.date | date("m/d/Y")}}</div>

            <a href="{{ path('update_analyse', {id: analyse.id}) }}" class="btn btn-primary">Update</a>
            <a href="{{ path('delete_analyse', {id: analyse.id}) }}" class="btn btn-primary">Delete</a>
        </article>
    {% endfor %}
</div>
{% endblock %}
